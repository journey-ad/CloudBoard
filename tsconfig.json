{
  "include": [
    "env.d.ts",
    "src/**/*.d.ts",
    "src/**/*",
    "src/types/typedef.ts"
  ],
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"lib": [
			"es2022",
			"dom"
		],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"target": "ES2021",
		"types": [
			"vite/client",
			"@types/node"
		]
	}
}
